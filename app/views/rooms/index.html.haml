          .alert.alert-info.text-left.mb-0{"data-role" => 'container-of-reply'}
            %b{"data-role" => 'reply-to-username'}
            %hr.mb-0.mt-0
            %span{"data-role" => 'reply-to-content'}
          %p.mb-1{"data-role" => 'message-text'}
            %p
              %img.attached-image{src: "", "data-role" => 'attached-image'}
